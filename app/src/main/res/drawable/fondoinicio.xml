<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="100dp">
        <shape>
            <solid android:color="@color/colorAccent" />

        </shape>
    </item>
    <item
        android:top="-800dp"
        android:bottom="200dp"
        android:left="-200dp"
        android:right="-200dp">
        <shape>
            <corners android:radius="900dp" />
            <gradient
                android:angle="45"
                android:endColor="#F88850"
                android:centerColor="#F8A050"
                android:startColor="#F8C990"
                android:type="linear" />

        </shape>
    </item>
</layer-list>