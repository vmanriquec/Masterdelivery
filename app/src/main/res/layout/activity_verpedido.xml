<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <LinearLayout
        android:id="@+id/mira"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/fondotarjeta"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text=" tus direcciones "
            android:textColor="@color/colortres" />

        <Spinner
            android:id="@+id/spinnerdirecciones"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/datosdepago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancelarpe"

        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona tipo de pago" />

            <Spinner
                android:id="@+id/spinnertipodepago"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="46dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/src_files_payment" />

            <Switch
                android:id="@+id/dinero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Exacto?"
                android:textColor="@color/accent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nombredescuento3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="Traer vuelto para S/."

                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dacliente"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="00.00"
                android:inputType="number|numberDecimal"
                android:maxLength="4"
                android:maxLines="1"
                android:paddingLeft="5dp"

                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/servi">

            <Spinner
                android:id="@+id/spinnertiposdeservicio"
                android:layout_width="326dp"
                android:layout_height="39dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/horaderecojo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="digita la hora "
                android:inputType="textPersonName"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/todoloquesondatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/datosdepago"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/fondotarjeta"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/circulofondonaranja"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="12"
                    android:textAlignment="center"
                    android:textColor="@color/colortres"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="Subtotal de  Pedido"

                    android:textColor="@color/colortres"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="S/. "
                    android:textColor="@color/colortres"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/miavion"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="2dp"
                    android:text="TextView"
                    android:textColor="@color/colortres"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/costodelivery"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="45dp"
                android:text="Costo de Delivery"

                android:textColor="@color/colortres"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:text="S/. "
                android:textColor="@color/colortres"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/montodelvery"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="2dp"
                android:text="TextView"
                android:textColor="@color/colortres"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nombredescuento"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="45dp"
                android:text="No hay descuento"
                android:textColor="@color/colortres"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/t3extView4"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:text="S/.   - "
                android:textColor="@color/colortres"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/montodescuento"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="2dp"
                android:text="00.0"
                android:textColor="@color/colortres"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:background="@color/colortres" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="Total             S/."
                android:textColor="@color/colortres"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/totalpedidoapedir"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:paddingRight="2dp"
                android:text="00.00"
                android:textColor="@color/colortres"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:id="@+id/recylista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/todoloquesondatos"
        android:layout_below="@+id/mira"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerdepedidos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/cancelarpe"
        android:layout_width="89dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"

        android:background="@drawable/botondegradado"
        android:text="Anular"
        android:textColor="@color/colortres"
        android:textSize="18sp" />

    <Button
        android:id="@+id/irafirebase"
        android:layout_width="wrap_content"
        android:layout_height="27dp"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/cancelarpe"
        android:background="@drawable/botondegradado"
        android:text="Realizar Pedido "
        android:textColor="@color/colortres"
        android:textSize="18sp" />

</RelativeLayout>