<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:id="@+id/partedearriba"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/botoneramasomenos">

        <TextView
            android:id="@+id/cabeceralayoutadicional"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/fondotarjeta"
            android:gravity="center"
            android:text="Producto"
            android:textColor="@color/background_material_light"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <ScrollView
            android:id="@+id/recyclerdeadiconalesycremas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="13dp">

            <LinearLayout
                android:id="@+id/my_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/botoneramasomenos"
        android:layout_width="273dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_above="@id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp">

        <Button
            android:id="@+id/botonmenos"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_menos"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cantidadapedir"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:text="1"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botonmas"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_mas"
            android:textSize="36sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="222dp"
        android:layout_height="22dp"
        android:text=""
        android:textSize="14sp"
        android:layout_above="@id/editText2e"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:id="@+id/editText2e"
        android:layout_width="match_parent"
        android:layout_above="@id/barradelfinal"
        android:layout_height="33dp"
        android:background="@drawable/button_background"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Deja un comentario para la cocina"
        android:inputType="textPersonName"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:id="@+id/barradelfinal"
        android:layout_width="match_parent"
        android:layout_height="33dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fondotarjeta"
        android:orientation="horizontal">

        <Button
            android:id="@+id/acanasta"
            android:layout_width="wrap_content"
            android:layout_height="29dp"

            android:background="@color/trans"
            android:text="LISTO!  A LA CANASTA"
            android:textColor="@color/colortres"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingLeft="5dp"
            android:layout_marginLeft="30dp"

            android:gravity="center_vertical"
            android:text="S/."
            android:textColor="@color/colortres"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalapagar"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/colortres"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>